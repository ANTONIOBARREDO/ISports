<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ibisatebarredo.isports.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#69fbfcfc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo"
        android:id="@+id/titulo"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/walking"
        android:id="@+id/caminar"
        android:text="Caminar"
        android:textAlignment="center"
        android:textStyle="bold"
        android:contextClickable="false"
        android:duplicateParentState="true"
        android:layout_below="@+id/titulo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/abc_dropdownitem_icon_width" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correr"
        android:drawableLeft="@drawable/running"
        android:id="@+id/correr"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/caminar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/abc_dropdownitem_icon_width" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bicicleta"
        android:drawableLeft="@drawable/bike"
        android:id="@+id/bicicleta"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/correr"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dropdownitem_icon_width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:drawableLeft="@android:drawable/ic_menu_mylocation"
        android:id="@+id/posicionGPS"
        android:textColor="#f97266"
        android:text="GPS"
        android:textStyle="italic"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
